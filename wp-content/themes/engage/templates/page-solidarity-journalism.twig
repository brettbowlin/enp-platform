{% extends "base.twig" %}

{% block content %}
	<article class="article container container--md full-width post-type--{{post.post_type}}" id="post--{{post.ID}}">
		<header class="article__header">
			<h1 class="article__title">{{post.title}}</h1>
		</header>
		<div class="article__content">
			{{post.content}}
		</div>
		<div class="newsletter__wrapper">
		  <div class="newsletter-page widget">
		      {{ newsletter }}
		  </div>
		</div>
        <section class="tiles grid grid--col-12 grid--gap-20">
            {# newsroom resource posts from the relationship field #}
            {% for post in Post(resource_posts) %}
                {# get the tile file since we wont need the tile-intro.twig #}
                {% include "partial/tile.twig" with { 'tile': post } %}
            {% endfor %}
        </section>
        <p style="font-size:24px"><strong>{{post.meta('title_2')}}</strong></p>
		<div class = "bio-container">
			<div class = "bio-child img">{{post.meta('content_2')}}</div>
			<div class = "bio-child txt">{{post.meta('content_3')}}</div>
		</div>
	</article>
{% endblock %}