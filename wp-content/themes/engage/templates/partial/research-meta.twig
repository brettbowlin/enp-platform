{% if post.getReport %}
<p class="article-meta__item article-meta__item--research"><a href="{{ post.getReport }}" class="btn btn--stretch btn--icon research-meta__btn btn--{{ post.vertical.slug }} btn--research-report">
	<svg class="icon btn__icon icon--cloud-download"><use xlink:href="#cloud-download"></use></svg>
	<span class="sr-text">Download </span> 
	<span class="btn__text">Full Report</span>
</a></p>
{% endif %}

{% if post.getSummary %}
<p class="article-meta__item article-meta__item--research"><a href="{{ post.getSummary }}" class="btn btn--stretch btn--icon btn--ghost btn--{{ post.vertical.slug }} research-meta__btn btn--research-summary">
	<svg class="icon btn__icon icon--cloud-download"><use xlink:href="#cloud-download"></use></svg>
	<span class="sr-text">Download </span>
	<span class="btn__text">Summary</span>
</a></p>
{% endif %}

