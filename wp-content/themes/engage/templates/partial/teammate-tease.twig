{% if mate %}
<div class="mate{{ mate.thumbnail ? ' mate--has-img'}} mate--tease grid grid--col-12{{status}}">
	{% if mate.thumbnail and mate.terms('team_category') | join(', ') != "Graduate" and mate.status('additonal') %}
		<a class="mate-tease__link" href="{{site.url}}/team/{{mate.slug}}/"></a>
	{% endif %}

	{% if mate.thumbnail %}
		<div class="mate__img-wrap">
			<img class="mate__img" src="{{ mate.thumbnail.src('thumbnail') }}" alt="{{ mate.thumbnail.alt }}"/>
		</div>
	{% endif %}

	<div class="mate__content{{status}}">
		<p class="mate__name">{{ researcher.name|default(mate) }}</p>
		{% if researcher.thumbnail and researcher.getDesignation %}
			<p class="mate__labels">{{ researcher.designation|default("Researcher") }}</p>
		{% elseif researcher.terms('team_category') | join(', ') == "Graduate" %}
			<p class="mate__labels">{{ researcher.designation|default("Graduate") }}</p>
		{% else %}
			<p class="mate__labels">{{ researcher.title|default("Researcher") }}</p>
		{% endif %}
	</div>
</div>
{% endif %}
