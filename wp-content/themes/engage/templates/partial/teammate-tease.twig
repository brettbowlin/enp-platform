<div class="mate {{ mate.thumbnail ? ' mate--has-img'}} mate--tease grid grid--col-12">
	{% if post.post_type == 'research' %}
		<a class="mate-tease__link" href="#{{mate.slug}}"></a>
	{% endif %}
	{% if mate.thumbnail %}
	<div class="mate__img-wrap">
		<img class="mate__img" src="{{ mate.thumbnail.src('thumbnail') }}" alt="{{ mate.thumbnail.alt }}"/>
	</div>
	{% endif %}
	<div class="mate__content">
		<p class="mate__name">{{ mate.name ? mate.name : mate}}</p>
		<p class="mate__labels">{{ mate.designation ? mate.designation : "Researcher" }}</p>
	</div>
</div>
