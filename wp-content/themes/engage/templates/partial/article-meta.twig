<div class="article__meta">
	{% if post.post_type != 'tribe_events' and post.post_type != 'research' and post.post_type != 'case-study' %}
	<p class="article-meta__item article__author">
		<span class="author__by">By</span> <a class="author__link" href="{{ post.author.path }}">{{ post.author.name }}</a>
	</p>
	<p class="article-meta__item article__date">{{ post.date }}</p>
	{% endif %}

	{% if post.post_type == "tribe_events" %}
	{% include 'partial/event-meta.twig' %}
	{% endif %}
	
	<p class="article-meta__item article__vertical article__vertical--{{ post.vertical.slug }}"><a class="vertical-color--{{ post.vertical.slug }} " href="{{ post.vertical.link }}">{{ post.vertical.name }}</a></p>

	{% include 'partial/share.twig' %}

	{% if post.post_type == "research" or post.post_type == "case-study" %}
	{% include 'partial/research-meta.twig' %}
	{% endif %}
</div>



