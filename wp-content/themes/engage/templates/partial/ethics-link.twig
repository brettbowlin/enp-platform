<div class="tile tile--has-img tile--vertical--media-ethics">
  <div class="tile__img-wrap">
    <img class="tile__img" src="{{ tile.imgSrc }}" alt="{{ tile.imgAlt }}"/>
  </div>

  <a class="tile__link" href="{{ tile.link }}">
    <span class="sr-text">{{ tile.title }}</span></a>
  <h3 class="tile__title h3">{{ tile.title|length > 50 ? tile.title|slice(0, 50) ~ "..." : tile.title}}</h3>

  <div class="tile__excerpt">{{ tile.preview }}</div>

  <div class="tile__label">
    Media Ethics
    <div class="tile__bar"></div>
  </div>
</div>
