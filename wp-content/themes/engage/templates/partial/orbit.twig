
<div class="orbit-wrapper orbit-hero wrapper--pad">
  <div class="orbit-container container container--md">
    <div class="orbit">
      <div id="orbit-field" class="orbit-field">
        <div id="orbit-balls" class="orbit-balls"></div>
        <div class="orbit-field-info-container orbit-field-info-container--mobile" aria-live="polite">
          <svg class="icon icon--mobile"><use xlink:href="#mobile"></use></svg>
          <div class="orbit-field-info">
            <h3 class="orbit-field-info__title">Engagement</h3>
            <p class="orbit-current-pull">
              <span id="orbit-current-gravity"></span>
              <span class="orbit-percentage-sign">%</span>
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="orbit-callout">
      <h2 class="orbit-callout__title">We Research & Build Tools To Pull Your Users In</h2>
      
      <form class="orbit-gravity-form">

        <span class="sr-text">Set Pull</span>
         <button type="button" id="orbit-increase-pull" class="btn--change-pull btn--increase-pull"><span class="sr-text">Increase Engagement</span>+</button>
        <button type="button" id="orbit-decrease-pull" class="btn--change-pull btn--decrease-pull"><span class="sr-text">Decrease Engagement</span>-</button>


      </form>
    </div>
  </div>
</div>