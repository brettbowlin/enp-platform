{% extends "base.twig" %}

{% block content %}

	<article class="container container--lg post-type--{{post.post_type}}" id="post--{{post.ID}} page-tools">
		<header class="article__header tile tile--vertical--journalism tile--intro">
			<h1 class="tile__title tile__title--intro">{{post.title}}</h1>
		</header>
		<div class="article__content">
			{{post.content}}
		</div>
	</article>

{% endblock %}

