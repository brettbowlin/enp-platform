<article class="tease tease--{{post.post_type}}" id="tease--{{post.ID}}">
	{% block content %}
		<h3 class="tease__title"><a href="{{ post.link }}">{{ post.title }}</a></h3>
		{% if post.thumbnail %}
			<a href="{{ post.link }}">
				<img class="tease__img" src="{{ post.thumbnail.src }}" />
			</a>
		{% endif %}
		<p class="tease__excerpt">{{ post.preview }}</p>
	{% endblock %}
</article>
