{% extends "base.twig" %}
{# Parent PHP file: archive-team.php #}
{% block content %}
<div class="container_team">
    {% for category in categories %}
        {% if category != 'alumni' %}
            {% set title_data = processed_titles[category] %}
            <div class="mate__header-container header-left header-align-left header-border header-border-left">
                <div class="mate__header-wrap" style="border-color:#bf5700;">
                    {% if title_data.supertitle %}
                        <h3 class="mate__subheader" style="color:#333f48;">{{ title_data.supertitle }}</h3>
                    {% endif %}
                    <h2 class="mate__header" style="color:#bf5700;">{{ title_data.title }}</h2>
                </div>
            </div>
        {% endif %}
        {% include 'partial/teammates_new.twig' with { mates: filtered_posts[category], format: "excerpt", category: category } %}
    {% endfor %}
</div>
{% endblock %}