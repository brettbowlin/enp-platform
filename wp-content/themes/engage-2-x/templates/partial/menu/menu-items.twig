<ul class="menu__list {{ isMainMenu ? 'navbar-nav' }}">
    {% for item in items %}
        <li class="menu__item {{ isMainMenu ? 'nav-item' }} {{ item.children ? 'dropdown' }} {{ item.classes | join(' ') }}"
            {% if item.children %} tabindex="{{ 0 }}" {% endif %}>
            <a class="menu__link" target="{{ item.target }}" {% if item.link %} href="{{ item.link }}" {% endif %}>
                {{ item.title }}
            </a>
            {% if item.children %}
                <ul class="menu__sublist">
                    {% include "partial/menu/nested-items.twig" with {
                        'items': item.children,
                        'collapsable': collapsable
                    } %}
                </ul>
            {% endif %}
        </li>
    {% endfor %}
</ul> 